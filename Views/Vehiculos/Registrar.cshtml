@model SistemaAdminTaller.Models.Vehiculo
@{
    ViewData["Title"] = "RegistrarVehiculo";
}

<div class="container-fluid p-4">
    <h4>Registrar Reparaci√≥n</h4>
    <hr>
    <form asp-action="Registrar">
        <div asp-validation-summary="ModelOnly"></div>
         <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Cliente" class="control-label"></label>
                <select asp-for="ClienteID" class="form-control" asp-items="ViewBag.ClienteID"></select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Mecanico" class="control-label"></label>
                <select asp-for="MecanicoID" class="form-control" asp-items="ViewBag.MecanicoID"></select>
            </div>
           <div class="form-group col-md-4">
                <label asp-for="FechaEntrada" class="control-label"></label>
                <input asp-for="FechaEntrada" class="form-control" />
                <span asp-validation-for="FechaEntrada" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
                <label asp-for="Marca"></label>
                <input  asp-for="Marca" class="form-control" placeholder="Marca">
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Modelo"></label>
                <input asp-for="Modelo" class="form-control" placeholder="Modelo">
                <span asp-validation-for="Modelo"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Patente"></label>
                <input asp-for="Patente" class="form-control" placeholder="Patente">
                <span asp-validation-for="Patente"></span>
            </div>
        </div>
        <div class="form-row">
             <div class="form-group col-md-6">
                <label asp-for="Averia"></label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="FechaSalida" class="control-label"></label>
                <input asp-for="FechaSalida" class="form-control" />
                <span asp-validation-for="FechaSalida" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label class="control-label">Precio</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">$</div>
                    </div>
                    <input asp-for="Presupuesto" class="form-control" placeholder="000,00">
                </div>
                <span asp-validation-for="Presupuesto" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input asp-for="Estado" class="form-check-input" type="checkbox">
                <label class="form-check-label" for="gridCheck">A reparar</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
    </form>
</div>
